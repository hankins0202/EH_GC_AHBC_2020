<div class="text-center">
    <h1>Movie List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserCheckedOut)
                </th>
                <th>
                    Checked Out
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserCheckedOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckedOut)
                </td>
                <td>
                    <a asp-action="CheckOut" asp-route-id="@item.ID" type="button" class="btn btn-outline-primary">Check Out</a>
                </td>
            </tr>
            }
        </tbody>
    </table>,
</div>  