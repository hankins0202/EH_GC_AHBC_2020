@model MovieWebApp.Data.Movies

@*this is required to reference model properties*@
@{ViewData["Title"] = "Movie Registration Page";
}

<div class="text-center">
    <h1 class="display-4">Register Your Movie!</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Result">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="@Model.Name" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label"></label>
                    <input asp-for="@Model.Genre" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Runtime" class="control-label"></label>
                    <input asp-for="@Model.Runtime" class="form-control">
                </div>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

