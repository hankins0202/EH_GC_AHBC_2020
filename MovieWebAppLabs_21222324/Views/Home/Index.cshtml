@model IEnumerable<MovieWebAppLabs_21222324.DataLayer.Context.Movies>

@{
    ViewData["Title"] = "Movies";
}

@using (@Html.BeginForm("MovieSearch", "Home", FormMethod.Post))
{
    <label for="Name" class="text-primary">Movie Title</label>
    <input id="Name" name="Name" type="text" />

    <input id="Search" type="submit" value="Search" />
}


<div class="text-center">
    <h1>Movie Registration</h1>

    @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckedOut)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckedOut)
                </td>
                <td>
                    <button asp-action="CheckOut">Check Out</button>
                </td>
            </tr>
            }
        </tbody>
    </table>,
</div>
